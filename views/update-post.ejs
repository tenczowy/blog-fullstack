<%- include('partials/header.ejs')%>
<main class="container">
  <form action="/updatePost" method="POST" class="post-form" id="update-form">
    <label for="Post Title">Title:</label>
    <input
      type="text"
      id="post-title"
      name="postTitle"
      value="<%= locals.post.title %>"
      required
    />
    <label for="post-text">Post:</label>
    <textarea type="text-area" id="post-text" name="postText" rows="5" required>
<%= locals.post.text%></textarea
    >
    <input type="hidden" name="post-id" value="<%= locals.post.id %>" />
    <input type="submit" value="Submit" />
  </form>
</main>
<%- include('partials/footer.ejs')%>
